<Window x:Class="AlicjaDobrowolska.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlicjaDobrowolska"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Background="CornflowerBlue"/>
        <TextBlock Grid.Row="1" Background="CornflowerBlue"/>
        <TextBlock Grid.Row="2" Background="CornflowerBlue"/>
        <TextBlock Text="TYTUŁ:"  Foreground="AliceBlue" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox Text="ZNIŻKA:" Grid.Row="1" Background="CornflowerBlue" Foreground="AliceBlue" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox Text="MIEJSCE:" Grid.Row="2" Background="CornflowerBlue" Foreground="AliceBlue" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox Grid.Column="1" Background="DarkSlateBlue" Foreground="AliceBlue" Text="{Binding title, Mode=TwoWay}"></TextBox>
        <TextBox Grid.Column="1" Grid.Row="1" Background="DarkSlateBlue" Foreground="AliceBlue" Text="{Binding type, Mode=TwoWay}"></TextBox>
        <TextBox Grid.Column="1" Grid.Row="2" Background="DarkSlateBlue" Foreground="AliceBlue" Text="{Binding type, Mode=TwoWay}"></TextBox>
        <Button Content="EDYTUJ" Grid.Row="4" Click="Button_Edytuj" Background="DarkOliveGreen" Foreground="AliceBlue" FontSize="40"/>
        <Button Content="ANULULJ" Grid.Row="4" Grid.Column="1" Click="Button_Anuluj" Background="DarkOliveGreen" Foreground="AliceBlue" FontSize="40"/>
    </Grid>
</Window>

<Window x:Class="AlicjaDobrowolska.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlicjaDobrowolska"
        mc:Ignorable="d"
        Title="Liczebnik" Height="385" Width="310" FontSize="25" Background="purple" MinHeight="385" MinWidth="310" MaxHeight="770" MaxWidth="1000">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>



        <TextBox x:Name="textBox1" Grid.ColumnSpan="3" Grid.Row="0" TextAlignment="right" FontSize="40" Margin="5"/>
        <Button x:Name="Clear" Grid.Column="4" Grid.Row="0" Click="Button_C" Background="#53669B">C</Button>
        <Button Grid.Column="0" Grid.Row="1" Click="Button_Click" Background="#C97AA5">1</Button>
        <Button Grid.Column="1" Grid.Row="1" Click="Button_Click" Background="#C97AA5">2</Button>
        <Button Grid.Column="2" Grid.Row="1" Click="Button_Click" Background="#C97AA5">3</Button>
        <Button x:Name="plus" Grid.Column="3" Grid.Row="1" Click="Button_plus" Background="#97A8DA">+</Button>

        <Button Grid.Column="0" Grid.Row="2" Click="Button_Click" Background="#C97AA5">4</Button>
        <Button Grid.Column="1" Grid.Row="2" Click="Button_Click" Background="#C97AA5">5</Button>
        <Button Grid.Column="2" Grid.Row="2" Click="Button_Click" Background="#C97AA5">6</Button>
        <Button x:Name="minus" Grid.Column="3" Grid.Row="2" Click="Button_minus" Background="#97A8DA">-</Button>

        <Button Grid.Column="0" Grid.Row="3" Click="Button_Click" Background="#C97AA5">7</Button>
        <Button Grid.Column="1" Grid.Row="3" Click="Button_Click" Background="#C97AA5">8</Button>
        <Button Grid.Column="2" Grid.Row="3" Click="Button_Click" Background="#C97AA5">9</Button>
        <Button x:Name="equals" Grid.Column="3" Grid.Row="3" Grid.RowSpan="4" Click="Button_equals" Background="#97A8DA">=</Button>

        <Button Grid.Column="0" Grid.Row="4" Click="Button_Click" Background="#D492CC">0</Button>
        <Button x:Name="mult" Grid.Column="1" Grid.Row="4" Click="Button_mult" Background="#97A8DA">*</Button>
        <Button x:Name="div" Grid.Column="2" Grid.Row="4" Click="Button_div" Background="#97A8DA">/</Button>

    </Grid>
</Window>

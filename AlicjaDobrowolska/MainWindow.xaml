<Window x:Class="AlicjaDobrowolska.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlicjaDobrowolska"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.ColumnSpan="6" Background="#B676B1"/>
        <TextBlock Text="ZAMÓW BILETY" Grid.ColumnSpan="6" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="35" Foreground="AliceBlue"/>
        <TextBlock Grid.Row="1" Background="#d9b9bc" Grid.ColumnSpan="2" />
        <TextBlock Grid.Row="2" Grid.ColumnSpan="2"  Background="#d9b9bc"/>
        <TextBlock Grid.Row="3" Grid.ColumnSpan="2"  Background="#d9b9bc"/>
        <TextBlock Grid.Row="4" Grid.ColumnSpan="2"  Background="#d9b9bc"/>
        <TextBlock Text="TYTUŁ:" Grid.Row="1" Grid.ColumnSpan="2"  Foreground="AliceBlue" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Text="ZNIŻKA:" Grid.Row="2" Grid.ColumnSpan="2"  Foreground="AliceBlue" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Text="MIEJSCE:" Grid.Row="3" Grid.ColumnSpan="2"  Foreground="AliceBlue" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox x:Name="title_txt" Grid.Row="1" Grid.Column="2" Background="AliceBlue" Foreground="Black" Text="{Binding title, Mode=TwoWay}"></TextBox>
        <TextBox x:Name="discount_txt" Grid.Column="2" Grid.Row="2" Background="AliceBlue" Foreground="Black" Text="{Binding discount, Mode=TwoWay}"></TextBox>
        <TextBox x:Name="seat_txt" Grid.Column="2" Grid.Row="3" Background="AliceBlue" Foreground="Black" Text="{Binding seat, Mode=TwoWay}"></TextBox>
        <TextBlock Text="ID:" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Foreground="AliceBlue" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox x:Name="search_txt" Grid.Row="4" Grid.Column="2" Background="AliceBlue" Foreground="Black" Text="{Binding title, Mode=TwoWay}"></TextBox>
        <DataGrid x:Name="dataGridMovies" Margin="-4,0,4,0" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1" Grid.Column="3" Grid.RowSpan="4" Grid.ColumnSpan="2" FontSize="20"/>
        <Button Click="Button_Dodaj" Grid.Column="0" Grid.Row="5" Content="Dodaj" Background="#A55969" Foreground="AliceBlue" FontSize="20"/>
        <Button Grid.Column="1" Grid.Row="5" Click="Button_update" Content="Aktualizuj" Background="#A55969" Foreground="AliceBlue" FontSize="20"/>
        <Button Click="Button_Usun" Grid.Column="2" Grid.Row="5" Content="Usuń" Background="#A55969" Foreground="AliceBlue" FontSize="20"/>
    </Grid>
</Window>

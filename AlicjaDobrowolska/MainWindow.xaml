<Window x:Class="AlicjaDobrowolska.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlicjaDobrowolska"
        mc:Ignorable="d"
        Title="MainWindow" Height="365" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.ColumnSpan="3" Background="CornflowerBlue"/>
        <TextBlock Text="ZAMÓW BILETY" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="35" Foreground="AliceBlue"/>
        <DataGrid x:Name="dataGridMovies" Margin="-4,0,4,0" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1" Grid.RowSpan="3" Grid.ColumnSpan="3" FontSize="20"/>
        <Button Click="Button_Dodaj" Grid.Column="0" Grid.Row="4" Content="Dodaj" Background="DarkOliveGreen" Foreground="AliceBlue" FontSize="20"/>
        <Button Grid.Column="1" Grid.Row="4" Click="Button_Wlasciwosci" Content="Edytuj" Background="DarkOliveGreen" Foreground="AliceBlue" FontSize="20"/>
        <Button Grid.Column="2" Grid.Row="4" Click="Button_Connect" Content="Połącz" Background="DarkOliveGreen" Foreground="AliceBlue" FontSize="20"/>
        <Button Click="Button_Usun" Grid.Column="3" Grid.Row="4" Content="Usuń" Background="DarkOliveGreen" Foreground="AliceBlue" FontSize="20"/>
    </Grid>
</Window>
